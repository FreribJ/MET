<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCreationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MET"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:textSize="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Erstelle dein Benutzer"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical"
            android:layout_gravity="fill_vertical">

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name">
            </EditText>
            <EditText
                android:id="@+id/inputAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Geburtsdatum (dd.MM.yyyy)"
                android:inputType="date">
            </EditText>
            <EditText
                android:id="@+id/inputWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Gewicht"
                android:inputType="numberDecimal">
            </EditText>
            <Spinner
                android:id="@+id/categoryChoice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="AktivitÃ¤tskategorie">
            </Spinner>
            <Button
                android:id="@+id/userCreationFinished"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Fertig"></Button>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>